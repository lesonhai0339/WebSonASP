<body>

    <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex justify-content-between align-items-center">

      <div class="logo">
        <h1 class="text-light">
                    <a href="@Url.Action("Index","Home")"><img src="~/assets/img/Web/icon.png" alt="" class="img-thumbnail"></a>
          <a href="@Url.Action("Index","Home")"><span>FUNASA</span></a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
      </div>
      
       <nav id="navbar" class="navbar">
        <ul>
          <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
          <li><a href="@Url.Action("about","Son")" >Giới thiệu</a></li>
          <li><a href="@Url.Action("services","Son")">Hỗ trợ</a></li>
          <li><a href="@Url.Action("portfolio","Son")">Bảng Sơn</a></li>
          <li><a href="@Url.Action("team","Son")">Đội ngũ</a></li>
          <li><a href="@Url.Action("blog","Son")">Tin tức</a></li>
          <li class="dropdown">
                        <a href="@Url.Action("danhMucSanPham","Son")"><span>Sản phẩm</span> <i class="bi bi-chevron-down"></i></a>
