@model IEnumerable<WebSonASP.Models.Mauson>
@{
    ViewData["Title"] = "potfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
    QLSONContext db = new WebSonASP.Models.QLSONContext();
}

<body>

  <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex justify-content-between align-items-center">

     <div class="logo">
        <h1 class="text-light">
                    <a href="@Url.Action("Index","Home")"><img src="~/assets/img/Web/icon.png" alt="" class="img-thumbnail"></a>
          <a href="@Url.Action("Index","Home")"><span>FUNASA</span></a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
      </div>
      
      <nav id="navbar" class="navbar">
        <ul>
          <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
          <li><a href="@Url.Action("about","Son")" >Giới thiệu</a></li>
          <li><a href="@Url.Action("services","Son")">Hỗ trợ</a></li>
          <li><a class="active" href="@Url.Action("portfolio","Son")">Bảng Sơn</a></li>
          <li><a href="@Url.Action("team","Son")">Đội ngũ</a></li>
          <li><a href="@Url.Action("blog","Son")">Tin tức</a></li>
          <li class="dropdown">
                        <a href="@Url.Action("danhMucSanPham","Son")"><span>Sản phẩm</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            @foreach(var item in db.Sons.ToList())
                            {
                                <li><a asp-controller="Son" asp-action="chiTietSanPham" asp-route-id="@item.Id">@item.Ten</a></li>
                            }
                        </ul>
                    </li>
          <li><a href="@Url.Action("contact","Son")">Liên hệ</a></li>
          <!--<li><a class="single" href="tel:+0384 539 162">Liên hệ: 0384 539 162</a></li>--test tell-->
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
  <section id="mauson" class="d-flex justify-cntent-center align-items-center">
    </div>
  </section><!-- End Hero -->
  <main id="main">

    <!-- ======= Our Portfolio Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Bảng màu</h2>
          <ol>
                        <li><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
            <li>Bảng màu</li>
          </ol>
        </div>

      </div>
    </section><!-- End Our Portfolio Section -->

    <!-- ======= Portfolio Section ======= -->
    <section class="portfolio">
      <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">Tổng hợp</li>
                        <li data-filter=".filter-01">Chống cháy</li>
                        <li data-filter=".filter-02">Nền bê tông</li>
                    </ul>
                </div>
            </div>
                <div class="row portfolio-container" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
                    @foreach (var item in Model)
                    {
                        <div class="col-3 row-cols-3 flex-wrap align-items-center m-5 portfolio-wrap filter-@item.Maloai">
                        <div class="card portfolio-item w-100 h-100"  style="background:#@item.Mason;width:150px;height:100px;border:1px solid #000000">
                                <div class="portfolio-info">
                                    <h3>@item.Tenmau</h3>
                            <div>
                                        @{
                                            string anh =@item.Mason + ".png";
                                        }
                              <a href="assets/img/ColorPaint/@anh"  data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.Tenmau"><i class="bx bx-plus"></i></a>
                              <a href="portfolio-details.html" title="Portfolio Details"><i class="bx bx-link"></i></a>
                            </div>
                          </div>
                        </div>
                            <div class="card-body text-center w-100">
                                <p class="card-text ">@item.Tenmau</p>
                            </div>
                      </div>
                }
            </div>
       </div>
    </section><!-- End Portfolio Section -->
  </main><!-- End #main -->
   <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
  <!-- Vendor JS Files -->
  <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="~/assets/vendor/aos/aos.js"></script>
  <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/assets/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="~/assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="~/assets/js/main.js"></script>

</body>